<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-3">
    <h3 class="mt-3 mb-3"><%= listing.title %></h3>
  </div>
  <div class="col-md-6 offset-md-3">
    <div class="card listing-card" style="width: 100%">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing image"
      />
      <div class="card-body pad mt-3">
        <p class="card-text">
          <i><b>Owned By: </b><%= listing.owner.username %></i>
        </p>
        <p class="card-text"><b>About: </b><%= listing.description %></p>
        <p class="card-text">
          <b>Price: </b>&#x20B9; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><b>Location: </b><%= listing.location %></p>
        <p class="card-text"><b>Country: </b><%= listing.country %></p>
      </div>
    </div>
  </div>
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
    <div class="">
      <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
    </div>
    <div class="">
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark del-btn">Delete</button>
      </form>
    </div>
  </div>
  <% } %>
  <div class="col-6 offset-3">
    <hr />
    <% if(currUser) { %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-grow">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible"></label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good"></label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average"></label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good"></label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing"></label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          required
          class="form-control"
          id="comment"
          name="review[comment]"
          rows="5"
          cols="30"
          placeholder="Write your review here..."
        ></textarea>
        <div class="invalid-feedback">Review cannot be empty!</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-outline-dark mb-3">Submit</button>
    </form>
    <hr />
    <% } %>
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card mb-3 col-5 ms-3">
        <div class="card-body">
          <h6 class="card-title"><b>@<%= review.author.username %></b></h6>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
          <form
            class="mt-3"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="post"
          >
            <% if(currUser && currUser._id.equals(review.author._id)) { %>
            <button class="btn btn-sm btn-outline-dark">Delete</button>
            <% } %>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <br /><br /><br />
</div>
