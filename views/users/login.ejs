<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3 mb-4">Log In</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <br />
        <input
          type="text"
          name="username"
          id="username"
          required
          placeholder="Enter Username"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <br />
        <input
          type="password"
          name="password"
          id="password"
          required
          placeholder="Set Your Password"
          class="form-control"
        />
      </div>
      <button class="btn add-btn mb-3">Log In</button>
    </form>
  </div>
</div>
