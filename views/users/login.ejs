<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <h1 class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1 mb-4">
    Log In
  </h1>
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1 mb-4">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="identifier" class="form-label">Username or Email</label>
        <br />
        <input
          type="text"
          name="identifier"
          id="identifier"
          required
          placeholder="Enter Username or Email"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <br />
        <input
          type="password"
          name="password"
          id="password"
          required
          placeholder="Set Your Password"
          class="form-control"
        />
      </div>
      <button class="btn add-btn mb-3">Log In</button>
    </form>
  </div>
</div>
